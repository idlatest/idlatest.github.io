---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<li class="mt-6">
  <div>
    <time class="text-xs text-slate-500 dark:text-slate-400" datetime={post.data.publishDate.toISOString()}>{post.data.publishDate.toDateString()}</time>
  </div>
    <h3 class="font-semibold text-2xl text-slate-900 dark:text-white"><a href={`/posts/${post.slug}`}>{post.data.title}</a></h3>
  <p class=" text-slate-600 dark:text-slate-300 font-light">{post.data.description}</p>
  <div class="flex items-center text-slate-500 dark:text-slate-400 gap-2 text-sm flex-wrap leading-none">
    {post.data.tags.map(tag => <div><a href={`/tags/${tag}/1`}><span class="text-blue-500 dark:text-blue-400">#</span>{tag}</a></div>)}
  </div>
</li>
